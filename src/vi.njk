<ul class="post-entries">
{%- for post in collections['vi'] | reverse -%}
  <li class="post-entry">
    <h2 class="post-entry__title">
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h2>
    <p>{{ post.data.description }}</p>
    <p class="post-entry__date">
      {% if post.data.date %} {{ post.data.date | postDate }} {% endif %}
    </p>
    <hr />
  </li>
{%- endfor -%}
</ul>
